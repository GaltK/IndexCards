{
  "extends": [
    "../.eslintrc.json",
    "plugin:react-hooks/recommended",
    "plugin:react-refresh/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ]
  },
  "env": {
    "browser": true,
    "es2020": true
  }
}
